{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
    "array-bracket-spacing": ["error", "never"],
    "block-spacing": ["error", "always"],
    "brace-style": 2,
    "camelcase": 2,
    "comma-dangle": ["error", "only-multiline"],
    "comma-style": ["error", "last"],
    "consistent-this": 2,
    "indent": ["error", 2, {"SwitchCase": 1}],
    "linebreak-style": 2,
    "keyword-spacing": 2,
    "key-spacing": 2
  }
}